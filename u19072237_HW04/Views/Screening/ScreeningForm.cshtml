                <div class="checkbox">
                    @Html.EditorFor(model => model.HaveSymptoms)
                    @Html.ValidationMessageFor(model => model.HaveSymptoms, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="padding: 10px">
