@model IEnumerable<u19072237_HW04.Models.HIVpatient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.css" type="text/css" media="screen" />

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js"></script>
</head>
<body>
    <br />
    <h2 style="text-align:center"> List of HIV Positive Patients</h2>

    <p>
        <button type="button" class="btn btn-info">  @Html.ActionLink("Create New HIV Patient", "Create")</button>

    </p>
    <div class="row">
        <table class="table table-striped">
            <tr style="background-color: cornflowerblue">
                <th>
                    NAME
                </th>
                <th>
                    SEX
                </th>
                <th>
                    AGE
                </th>
                <th>
                    ADMITTED TO CLINIC
                </th>
                <th>
                    CD4COUNT
                </th>
                <th>
                    HEALTH CONDITION
                </th>
                <th>
                    BED ALLOCATION
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr id="myTableRow">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isAdmitted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CD4Count)
                    </td>
                    <td>
                        @item.HealthCondition();
                    </td>
                    <td>
                        @item.BedAllocated();
                    </td>
                    <td>
                        <button type="button" class="btn btn-warning">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                        </button>

                        <button type="button" class="btn btn-danger" onclick="myFunction()">DELETE</button>
                    </td>
                </tr>
            }
        </table>
    </div>

    <script>
        function myFunction() {

            $('#myTableRow').remove();
        }
    </script>

</body>

